
@model ContactListViewModel

@{ 
    Dictionary<string, string> sortOptionDict = ViewBag.SortOption;
    IEnumerable<string> tags = ViewBag.TagList;
}

<form method="get"
      asp-controller="Contact"
      asp-action="List"
     >
    <input asp-for="PageNo" value="" hidden />
    <div class="form-group">
        <label>name</label>
        <input asp-for="FilterName" class="form-control"/>
    </div>
    <div class="form-group">
        <label>phone</label>
        <input asp-for="FilterPhonenumber" class="form-control"/>
    </div>
    <div class="form-group">
        <label>tag</label>
        <select asp-for="FilterTag" class="form-control">
            <option value="">none</option>
            @foreach (var tag in tags ?? Enumerable.Empty<string>())
            {
                <option value="@tag">@tag</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>sort</label>
        <select asp-for="SortOption" class="form-control">
            @foreach (var item in sortOptionDict)
            {
                <option label="@item.Value" value="@item.Key"></option>
            }
        </select>
    </div>
    <button type="submit"
            class="btn btn-primary btn-sm">submit</button>
    <a asp-controller="Contact"
       asp-action="list"
       class="btn btn-default btn-sm">reset</a>
</form>