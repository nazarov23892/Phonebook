@using System.Text
@model Contact

<div class="col-sm-1"></div>
<div class="col col-sm-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>View Form</h4>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Lastname"></label>
        <input asp-for="Lastname" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Firstname"></label>
        <input asp-for="Firstname" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Patronymic"></label>
        <input asp-for="Patronymic" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Phonenumber"></label>
        <input asp-for="Phonenumber" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label>Tags</label>
        <div>
            @foreach (var tag in Model.Tags ?? Enumerable.Empty<string>())
            {
                <span class="badge badge-pill badge-success">@tag</span>
            }
        </div>
    </div>
    <a asp-controller="Contact"
       asp-action="List"
       class="btn btn-default">back</a>
</div>